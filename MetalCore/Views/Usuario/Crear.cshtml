@model SB_Admin.Entities.UsuarioObj

@{
    ViewBag.Title = "Agregar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.MjsCrear != null)
{
    <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert">
            &times;
        </button>
        <strong>!El usuario ya se encuentra registrado!</strong> @ViewBag.Alert
    </div>
}

@if (ViewBag.MjsCreado != null)
{
    <div class="alert alert-dismissable alert-success">
        <button type="button" class="close" data-dismiss="alert">
            &times;
        </button>
        <strong>!Empleado registrado!</strong> @ViewBag.Alert
    </div>

}
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-primary">
        <h6 class="m-0 font-weight-bold text-white">Creacion de un nuevo usuario</h6>
    </div>
    <div class="card-body">

        @using (Html.BeginForm("RegistrarUsuario", "Usuario", FormMethod.Post, new { id = "form" }))
        {
            <!--metodo-->
            <div class="row">
                <!--para las filas-->
                <!--se crea la columna-->
                <div class="col-4">
                    <div class="form-group">
                        <label>Rol</label>
                        @Html.DropDownListFor(m => m.idRol, ViewBag.listaRoles as List<SelectListItem>, new { @class = "form-control", @id = "idRol", @onchange = "Habilitar()" })
                        @Html.ValidationMessageFor(m => m.idRol)
                    </div>
                </div>


                <div class="col-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Nombre)
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @required = "required", @type = "Text", @id = "Nombre", @onchange = "Habilitar()" })
                        @Html.ValidationMessageFor(m => m.Nombre, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label>Apellido</label>
                        @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", @required = "required", @type = "Text", @id = "Apelli", @onchange = "Habilitar()" })
                        @Html.ValidationMessageFor(m => m.Apellido, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(m => m.email, new { @class = "form-control", @type = "email", @id = "email", @onchange = "Habilitar()" })
                        @Html.ValidationMessageFor(m => m.email, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label>Cedula</label>
                        @Html.TextBoxFor(m => m.cedula, new { @class = "form-control", @maxlength = "9",@required = "number", id = "cedu", @onchange = "Habilitar()" })
                        @Html.ValidationMessageFor(m => m.cedula, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label>Contraseña </label>
                        @Html.TextBoxFor(m => m.password, new { @class = "form-control", @required = "required", @type = "password", @maxlength = "8", @id = "pass", @onchange = "Habilitar()" })
                    </div>
                </div>

            </div>
            //eliminar la opcion de error predeterminado formnovalidate
            <div class="row">

                <div class="col-12">
                    <button type="submit" disabled class="btn btn-warning" id="boton" formnovalidate>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-check-fill" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                            <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>  Guardar Usuario
                    </button>
                </div>


            </div>}

        <div class="col-12" style=" margin: 0 160px; top: -38px;">
            <form action="Consultar">
                <button type="submit" class="btn btn-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                        <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
                    </svg> Cancelar
                </button>
            </form>
        </div>


        <!-- DataTales Example -->
    </div>
</div>


@model MetalCore.ETL.Entities.UsuarioObj

@{
    ViewBag.Title = "Actualizar";
}

@if (ViewBag.MjsActua != null)
{
    <div class="alert alert-dismissable alert-success">
        <button type="button" class="close" data-dismiss="alert">
            &times;
        </button>
        <strong>!Se modificó!</strong> @ViewBag.Alert
    </div>
}
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-primary">
        <h6 class="m-0 font-weight-bold text-white">Actualizacion de un usuario</h6>
    </div>
    <div class="card-body">

        @using (Html.BeginForm("ActuaUsuario", "Usuario", FormMethod.Post, new { id = "formA" }))
        {
            <!--metodo-->
            <div class="row">
                <!--para las filas-->
                <!--se crea la columna-->

                <div class="col-4">
                    <div class="form-group">
                        <label>Rol</label>
                        @Html.DropDownListFor(m => m.idRol, ViewBag.listaRoles as List<SelectListItem>, new { @class = "form-control", @id = "idRol", @onchange = "HabilitarActua()" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Nombre)
                        @Html.TextBoxFor(Model => Model.Nombre, new { @class = "form-control", @required = "required", @type = "Text", @id = "Nombre", @onchange = "HabilitarActua()" })
                        @Html.ValidationMessageFor(Model => Model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label>Apellido</label>
                        @Html.TextBoxFor(Model => Model.Apellido, new { @class = "form-control", @required = "required", @type = "Text", @id = "Apelli", @onchange = "HabilitarActua()" })
                        @Html.ValidationMessageFor(Model => Model.Apellido, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(Model => Model.email, new { @class = "form-control", @type = "email" })
                        @Html.ValidationMessageFor(Model => Model.email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label>Cedula</label>
                        @Html.TextBoxFor(Model => Model.cedula, new { @class = "form-control", @maxlength = "9", @required = "number", @readonly = "readonly" })
                        @Html.ValidationMessageFor(Model => Model.cedula, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label>Estado</label>
                        @Html.DropDownListFor(ms => ms.idEstado, ViewBag.listaEstados as List<SelectListItem>, new { @class = "form-control", @id = "idEstado", @onchange = "HabilitarActua()" })
                    </div>
                </div>

            </div>
            //eliminar la opcion de error predeterminado formnovalidate
            <div class="row">
                <div class="col-12">
                    <button type="submit" disabled class="btn btn-warning" id="botonActua" formnovalidate>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg> Actualizar Usuario
                    </button>
                </div>
            </div>
        }
        <div class="col-12">
            <form action="Consultar" style="margin: 0 170px; position: absolute; top: -38px ">
                <button type="submit" class="btn btn-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                        <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
                    </svg> Cancelar
                </button>
            </form>
        </div>

        <!-- DataTales Example -->
    </div>
</div>

